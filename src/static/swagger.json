{
  "openapi": "3.0.0",
  "info": {
    "description": "Media server for TutuboApp",
    "version": "1.0.0",
    "title": "Media Server"
  },
  "tags": [
    {
      "name": "videos",
      "description": "Operations about videos"
    }
  ],
  "paths": {
    "/videos": {
      "post": {
        "tags": [
          "videos"
        ],
        "summary": "Add new video",
        "operationId": "createVideo",
        "requestBody": {
          "description": "Created video object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "allOf": [
                  {
                    "$ref": "#/components/schemas/VideoNew"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Video uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing fields / Invalid visibility"
          },
          "409": {
            "description": "Video already uploaded"
          }
        }
      },
      "get": {
        "tags": [
          "videos"
        ],
        "summary": "Get all videos",
        "description": "",
        "operationId": "getVideos",
        "responses": {
          "200": {
            "description": "Videos uploaded in Media Server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Video"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/videos/{videoId}": {
      "get": {
        "tags": [
          "videos"
        ],
        "summary": "Get video by id",
        "description": "",
        "operationId": "getVideoById",
        "parameters": [
          {
            "$ref": "#/components/parameters/pathVideoId"
          }
        ],
        "responses": {
          "200": {
            "description": "Video uploaded in Media Server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Video"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Video not found"
          }
        }
      },
      "put": {
        "tags": [
          "videos"
        ],
        "summary": "Delete video by id",
        "description": "",
        "operationId": "editVideo",
        "parameters": [
          {
            "$ref": "#/components/parameters/pathVideoId"
          }
        ],
        "requestBody": {
          "description": "Edit video object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "allOf": [
                  {
                    "$ref": "#/components/schemas/EditVideo"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Video edited successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Video"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid fields / Invalid visibility"
          },
          "404": {
            "description": "Video not found"
          }
        }
      },
      "delete": {
        "tags": [
          "videos"
        ],
        "summary": "Delete video by id",
        "description": "",
        "operationId": "deleteVideoById",
        "parameters": [
          {
            "$ref": "#/components/parameters/pathVideoId"
          }
        ],
        "responses": {
          "204": {
            "description": "Video deleted successfully"
          },
          "404": {
            "description": "Video not found"
          }
        }
      }
    },
    "/videos/{id}/blocked": {
      "post": {
        "tags": [
          "videos"
        ],
        "summary": "Block video by id",
        "description": "",
        "operationId": "blockVideoById",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Video blocked"
          },
          "404": {
            "description": "Video not found"
          }
        }
      },
      "delete": {
        "tags": [
          "videos"
        ],
        "summary": "Unblock video by id",
        "description": "",
        "operationId": "unblockVideoById",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Video unblocked"
          },
          "404": {
            "description": "Video not found"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "pathVideoId": {
        "in": "path",
        "name": "videoId",
        "required": true,
        "schema": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "schemas": {
      "Video": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "example": 2
          },
          "url": {
            "type": "string",
            "example": "https://www.tutubo.com/video"
          },
          "thumb": {
            "type": "string",
            "example": "Thumb of a video"
          },
          "author": {
            "type": "string",
            "example": "Author"
          },
          "title": {
            "type": "string",
            "example": "Title of a video"
          },
          "description": {
            "type": "string",
            "example": "Description of a video"
          },
          "visibility": {
            "type": "string",
            "example": "public"
          },
          "date": {
            "type": "string",
            "example": "1/1/2017"
          }
        }
      },
      "VideoNew": {
        "type": "object",
        "required": [
          "user_id",
          "url",
          "author",
          "title",
          "visibility",
          "date"
        ],
        "properties": {
          "user_id": {
            "type": "integer",
            "example": 2
          },
          "url": {
            "type": "string",
            "example": "https://www.tutubo.com/video"
          },
          "thumb": {
            "type": "string",
            "example": "Thumb of a video"
          },
          "author": {
            "type": "string",
            "example": "Author"
          },
          "title": {
            "type": "string",
            "example": "Title of a video"
          },
          "description": {
            "type": "string",
            "example": "Description of a video"
          },
          "visibility": {
            "type": "string",
            "example": "public"
          },
          "date": {
            "type": "string",
            "example": "1/1/2017"
          }
        }
      },
      "EditVideo": {
        "type": "object",
        "properties": {
          "thumb": {
            "type": "string",
            "example": "Thumb of a video"
          },
          "title": {
            "type": "string",
            "example": "Title of a video"
          },
          "description": {
            "type": "string",
            "example": "Description of a video"
          },
          "visibility": {
            "type": "string",
            "example": "public"
          }
        }
      }
    }
  }
}